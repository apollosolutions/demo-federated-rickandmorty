{
  "name": "non-federation-subgraph-transformation",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
      "start": "concurrently -k npm:server:*",
      "server:authors": "nodemon ./services/authors/index.js",
      "server:posts": "nodemon ./services/posts/index.js",
      "server:gateway": "wait-on tcp:4001 tcp:4002 && nodemon ./gateway/index.js",
      "transform-schema": "rimraf services/authors/schema.graphql && node transform-schema.js"
  },
  "dependencies": {
      "@apollo/subgraph": "^0.3.3",
      "@apollo/gateway": "^0.48.3",
      "apollo-server": "^3.6.4",
      "graphql": "15"
  },
  "devDependencies": {
    "@apollo/federation": "^0.33.0",
    "@graphql-tools/wrap": "^8.4.11",
    "@graphql-tools/utils": "^8.6.6",
    "apollo-graphql": "^0.9.6",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "graphql-transform-federation": "^2.2.0",
    "nodemon": "^2.0.7",
    "wait-on": "^5.2.1",
    "rimraf": "^3.0.2"
  }
}